# API Gateway
API_PORT=8080
API_SECRET_KEY=your-secret-key-here
API_RATE_LIMIT=100
API_TIMEOUT=30000

# Authentication
JWT_SECRET=your-secret-key-here
AUTH_TOKEN_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=7d
PASSWORD_SALT_ROUNDS=10

# Database Connections
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secret
POSTGRES_DB=auth
POSTGRES_HOST=auth-db
POSTGRES_PORT=5432
MONGO_URI=mongodb://file-db:27017/files
MONGO_USER=admin
MONGO_PASSWORD=secret

# AWS Credentials
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-west-2
AWS_S3_BUCKET=your-bucket-name

# Jenkins Configuration
JENKINS_URL=http://localhost:8080
JENKINS_USER=admin
JENKINS_TOKEN=your-jenkins-token
JENKINS_WEBHOOK_SECRET=your-webhook-secret

# Kubernetes
KUBECONFIG=/root/.kube/config
K8S_NAMESPACE=default
K8S_SERVICE_ACCOUNT=devops-ide
K8S_CONTEXT=your-context

# Redis
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# Frontend
VITE_API_URL=http://localhost:8080
VITE_WS_URL=ws://localhost:8086
VITE_APP_NAME=DevOps IDE
VITE_APP_VERSION=1.0.0

# Monitoring
PROMETHEUS_RETENTION_DAYS=15
GRAFANA_ADMIN_PASSWORD=admin

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/var/log/devops-ide.log

# Security
CORS_ALLOWED_ORIGINS=http://localhost:5173
TLS_CERT_PATH=/etc/certs/server.crt
TLS_KEY_PATH=/etc/certs/server.key

# Feature Flags
ENABLE_AWS_INTEGRATION=true
ENABLE_K8S_INTEGRATION=true
ENABLE_JENKINS_INTEGRATION=true
ENABLE_MONITORING=true

# Performance
MAX_CONCURRENT_BUILDS=5
CACHE_TTL=3600
WORKER_THREADS=4

# DevOps Tools Configuration
SONAR_URL=http://localhost:9000
SONAR_TOKEN=your-sonar-token
SONAR_PROJECT_KEY=devops-ide

GITHUB_TOKEN=your-github-token